{
    "manifest_version": 3,
    "name": "Hearing AID",
    "description": "An extension help readout the main content.",
    "version": "1.0.0",
    "icons": {
        "128": "icons/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "32": "icons/icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ]
}